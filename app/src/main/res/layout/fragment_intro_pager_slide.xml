<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.IntroPagerSlide">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/intro_figure"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/hwid_auth_button_round_normal"
        app:layout_constraintBottom_toTopOf="@+id/intro_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/intro_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/intro_text"
        app:layout_constraintEnd_toEndOf="@+id/intro_figure"
        app:layout_constraintStart_toStartOf="@+id/intro_figure"
        app:layout_constraintTop_toBottomOf="@+id/intro_figure" />

    <TextView
        android:id="@+id/intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/intro_heading"
        app:layout_constraintStart_toStartOf="@+id/intro_heading"
        app:layout_constraintTop_toBottomOf="@+id/intro_heading" />


</androidx.constraintlayout.widget.ConstraintLayout>